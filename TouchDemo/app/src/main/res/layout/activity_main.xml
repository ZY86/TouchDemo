<?xml version="1.0" encoding="utf-8"?>
<com.example.sidashidai.touchdemo.MyViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sidashidai.touchdemo.MainActivity">

    <com.example.sidashidai.touchdemo.MyTextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:text="Hello World!"
        android:layout_marginTop="100dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.sidashidai.touchdemo.MyButton
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_marginTop="100dp"
        android:background="@color/colorPrimary"/>

</com.example.sidashidai.touchdemo.MyViewGroup>

